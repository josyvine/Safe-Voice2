<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/navigation_home">

    <!-- Home Screen Fragment Destination -->
    <fragment
        android:id="@+id/navigation_home"
        android:name="com.safevoice.app.ui.home.HomeFragment"
        android:label="@string/title_home"
        tools:layout="@layout/fragment_home" />

    <!-- Contacts Screen Fragment Destination -->
    <fragment
        android:id="@+id/navigation_contacts"
        android:name="com.safevoice.app.ui.contacts.ContactsFragment"
        android:label="@string/title_contacts"
        tools:layout="@layout/fragment_contacts" />

    <!-- Settings Screen Fragment Destination -->
    <fragment
        android:id="@+id/navigation_settings"
        android:name="com.safevoice.app.ui.settings.SettingsFragment"
        android:label="@string/title_settings"
        tools:layout="@layout/fragment_settings" />

</navigation>
